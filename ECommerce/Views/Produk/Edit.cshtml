@model eCommerce.ViewModels.ProdukViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Edit Produk</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduk" />
             <div class="form-group">
                <label asp-for="NamaProduk" class="control-label"></label>
                <input asp-for="NamaProduk" class="form-control" />
                <span asp-validation-for="NamaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskripsiProduk" class="control-label"></label>
                <input asp-for="DeskripsiProduk" class="form-control" />
                <span asp-validation-for="DeskripsiProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HargaProduk" class="control-label"></label>
                <input asp-for="HargaProduk" class="form-control" />
                <span asp-validation-for="HargaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                <label asp-for="GambarFile" class="custom-file-label"></label>
                <input asp-for="GambarFile" type="file" class="custom-file-input" />
                <span asp-validation-for="GambarFile" class="text-danger"></span>
                <img src="~/@Model.GambarSrc" height="100"></img>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label">Kategori</label>
               <select asp-for="KategoriId" multiple class="form-select" 
               asp-items="@ViewBag.KategoriDataSource"></select>
                <span asp-validation-for="KategoriId" class="text-danger"></span>
             
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

