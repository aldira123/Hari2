@model eCommerce.ViewModels.ProdukViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Edit Produk</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduk" />
             <div class="form-group">
                <label asp-for="NamaProduk" class="control-label"></label>
                <input asp-for="NamaProduk" class="form-control" />
                <span asp-validation-for="NamaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskripsiProduk" class="control-label"></label>
                <input asp-for="DeskripsiProduk" class="form-control" />
                <span asp-validation-for="DeskripsiProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HargaProduk" class="control-label"></label>
                <input asp-for="HargaProduk" class="form-control" />
                <span asp-validation-for="HargaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stok" class="control-label"></label>
                <input asp-for="Stok" class="form-control" />
                <span asp-validation-for="Stok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gambar" class="control-label"></label>
                <input asp-for="Gambar" class="form-control" />
                <span asp-validation-for="Gambar" class="text-danger"></span>
            </div>
            <button type="submit" value="Create" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

