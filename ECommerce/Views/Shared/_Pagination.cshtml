@model eCommerce.ViewModels.PaginationViewModel

 <div class="featured-page">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <div>
              <div></div>
            </div>
          </div>
          <div class="col-md-8 col-sm-12">
            <div id="filters" class="button-group">
              @Html.ActionLink("Sebelumnya", Model.Action, Model.Controller, new {
                page = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1,
                pageCount = AppConstant.DEFAULT_PAGE_COUNT
                 })
                   Page : @Model.CurrentPage                
                   @Html.ActionLink("Selanjutnya", Model.Action, Model.Controller, new {
                    page = Model.TotalData < AppConstant.DEFAULT_PAGE_COUNT ? Model.CurrentPage : Model.CurrentPage+ 1,
                    pageCount=AppConstant.DEFAULT_PAGE_COUNT })                       
            </div>
          </div>
        </div>
      </div>
    </div>