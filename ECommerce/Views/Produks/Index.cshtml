@model IEnumerable<eCommerce.Datas.Entities.Produk>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamaProduk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskripsiProduk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HargaProduk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stok)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gambar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskripsiProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HargaProduk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gambar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProduk">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProduk">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProduk">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
