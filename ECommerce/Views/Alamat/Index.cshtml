@model IEnumerable<eCommerce.ViewModels.AlamatViewModel>
@{
  ViewData["Title"] = "Home Page";
  Layout = "_CustomerLayout";
  int i = 0;
}

<br>
<br>
<br>
<br>
<div class="container">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/Home/Index" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <a class="stext-109 cl8 hov-cl1 trans-04">
      Profile
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <span class="stext-109 cl4">
      Alamat
    </span>
  </div>

  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><a asp-action="Create">Create New</a></h6>
                </div>
</div>


<!-- Alamat -->
<div class="bg0 p-t-75 p-b-85">
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="wrap-table-shopping-cart">
            <table class="table-shopping-cart">
              <tr class="text-nowrap">
                <th class="column-1">Kecamatan</th>
                <th>kelurahan</th>
                <th>Rt</th>
                <th>Rw</th>
                <th>Kode Pos</th>
                <th>Detail</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
              @foreach (var item in Model)
              {
                <tr class="table_row">
                  <td class="column-1">@item.Kecamatan</td>
                  <td>@item.Kelurahan</td>
                  <td>@item.Rt</td>
                  <td>@item.Rw</td>
                  <td>@item.KodePos</td>
                  <td>@item.Detail</td>
                  <td><a asp-action="Edit" asp-route-id="@item.IdAlamat" class="btn btn-sm btn-primary">Edit</a></td>
                  <td><a asp-action="Delete" asp-route-id="@item.IdAlamat" class="btn btn-sm btn-primary">Delete</a></td>
                </tr>
              }
            </table>
          </div>
        </div>
      </div>
    </div>
</div>