@using eCommerce.ViewModels;
@model eCommerce.ViewModels.KategoriViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KategoriProduk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
