@using eCommerce.ViewModels;
@model eCommerce.ViewModels.KategoriViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Edit Kategori</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdKategori" />
            <div class="form-group">
                <label asp-for="NamaKategori" class="control-label">Nama Kategori</label>
                <input asp-for="NamaKategori" class="form-control" />
                <span asp-validation-for="NamaKategori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskripsiKategori" class="control-label">Deskripsi Kategori</label>
                <input asp-for="DeskripsiKategori" class="form-control" />
                <span asp-validation-for="DeskripsiKategori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <button type="submit" value="Create" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
